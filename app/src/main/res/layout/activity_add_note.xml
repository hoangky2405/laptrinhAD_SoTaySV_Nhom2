<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_add_note"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Chi tiết ghi chú"
            app:titleTextColor="#212121"
            app:navigationIcon="@drawable/ic_arrow_back_black"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/edt_note_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Nhập tiêu đề..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edt_note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Bắt đầu viết nội dung..."
                    android:gravity="top"
                    android:minLines="8"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_time_chip"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Hẹn giờ nhắc nhở"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:textSize="16sp"/>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/sw_alarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_alarm_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="15dp">

                        <RadioGroup
                            android:id="@+id/radio_group_repeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <RadioButton
                                android:id="@+id/radio_one_time"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Một lần"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/radio_daily"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Hàng ngày"/>

                            <RadioButton
                                android:id="@+id/radio_weekly"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Hàng tuần"/>
                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/layout_week_checkboxes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginBottom="15dp">

                            <CheckBox android:id="@+id/cb_mon" android:text="T2"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_tue" android:text="T3"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_wed" android:text="T4"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_thu" android:text="T5"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_fri" android:text="T6"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_sat" android:text="T7"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#424242"
                                android:gravity="center" android:textSize="12sp" android:layout_marginEnd="4dp"/>

                            <CheckBox android:id="@+id/cb_sun" android:text="CN"
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/bg_day_checkbox"
                                android:textColor="#F44336"
                                android:gravity="center" android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_pick_date"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Chọn ngày"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#1976D2"
                                android:padding="10dp"
                                android:background="@android:color/white"/>

                            <TextView
                                android:id="@+id/tv_pick_time"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Chọn giờ"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="#1976D2"
                                android:padding="10dp"
                                android:background="@android:color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Cập nhật"
        android:textColor="#FFFFFF"
        app:icon="@android:drawable/ic_menu_save"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#2196F3"
        app:elevation="6dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>